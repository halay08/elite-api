{
    "database": {
        "rules": "database.rules.json"
    },
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "functions": {
        "ignore": [
            ".firebase/**",
            ".firebaserc",
            "firebase.json",
            "**/node_modules/**",
            "**/logs/**",
            "**/src/**",
            "**/public/**"
        ],
        "source": "."
    },
    "storage": {
        "rules": "storage.rules"
    },
    "emulators": {
        "functions": {
            "port": 5001
        },
        "firestore": {
            "port": 8080
        },
        "database": {
            "port": 9000
        },
        "hosting": {
            "port": 5000
        },
        "pubsub": {
            "port": 8085
        },
        "ui": {
            "enabled": true
        }
    }
}
