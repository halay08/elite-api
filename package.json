{
    "name": "functions",
    "scripts": {
        "clean": "rimraf lib",
        "lint": "eslint 'src/**/*' --fix",
        "build": "tsc",
        "test": "ENV_FILE=./.env.test jest",
        "predev": "yarn functions:set-env",
        "dev": "cross-env NODE_ENV=develop tsc -w | firebase serve --only functions",
        "doc:build": "rimraf ./docs && apidoc -i ./src -f '.*\\.ts$' -o ./docs -t ./deployment/apidoc-template",
        "doc:serve": "yarn doc:build && serve ./docs",
        "functions:set-env": "firebase functions:config:unset env && firebase functions:config:set env=\"$(cat ./env.json)\"",
        "postfunctions:set-env": "firebase functions:config:get > .runtimeconfig.json",
        "serve": "npm run build && firebase functions:config:set api.version=v1 && firebase emulators:start --only functions",
        "shell": "npm run build && firebase functions:shell",
        "start": "npm run shell",
        "decrypt:serviceAccountKey": "mkdir -p ./lib && gpg --batch --yes --decrypt --output ./lib/serviceAccountKey.json ./deployment/sa-staging.json.gpg",
        "predeploy": "yarn clean && yarn functions:set-env && yarn build && yarn decrypt:serviceAccountKey",
        "deploy": "firebase deploy --only functions:api",
        "firestore:start": "firebase emulators:start --only firestore",
        "logs": "firebase functions:log"
    },
    "main": "lib/index.js",
    "engines": {
        "node": "12"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,ts,tsx}": [
            "eslint 'src/**/*' --fix"
        ]
    },
    "dependencies": {
        "@types/express": "^4.17.8",
        "@types/twilio": "^2.11.0",
        "apidoc": "^0.25.0",
        "body-parser": "^1.19.0",
        "cors": "^2.8.5",
        "cuid": "^2.1.8",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-validation": "^3.0.6",
        "firebase-admin": "^8.10.0",
        "firebase-functions": "^3.6.1",
        "helmet": "^4.1.1",
        "http-status-codes": "^2.1.4",
        "inversify": "^5.0.1",
        "inversify-binding-decorators": "^4.0.0",
        "inversify-express-utils": "^6.3.2",
        "inversify-logger-middleware": "^3.1.0",
        "lodash.isempty": "^4.4.0",
        "module-alias": "^2.2.2",
        "pino": "^6.7.0",
        "pino-pretty": "^4.3.0",
        "reflect-metadata": "^0.1.13",
        "twilio": "^3.50.0",
        "typesaurus": "^6.2.0"
    },
    "devDependencies": {
        "@types/cors": "^2.8.7",
        "@types/jest": "^26.0.14",
        "@types/lodash": "^4.14.161",
        "@types/pino": "^6.3.2",
        "@types/supertest": "^2.0.10",
        "@types/winston": "^2.4.4",
        "@typescript-eslint/eslint-plugin": "^3.9.1",
        "@typescript-eslint/parser": "^3.8.0",
        "cross-env": "^7.0.2",
        "eslint": "^7.6.0",
        "eslint-config-prettier": "^6.13.0",
        "eslint-import-resolver-typescript": "^2.3.0",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-prettier": "^3.1.4",
        "firebase-functions-test": "^0.2.2",
        "husky": "^4.3.0",
        "jest": "^26.5.3",
        "lint-staged": "^10.4.2",
        "prettier": "^2.1.2",
        "rimraf": "^3.0.2",
        "serve": "^11.3.2",
        "supertest": "^5.0.0",
        "ts-jest": "^26.4.1",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.3"
    },
    "private": true,
    "_moduleAliases": {
        "@/src": "lib",
        "@/api/http": "lib/api/http",
        "@/app": "lib/app",
        "@/domain": "lib/domain",
        "@/libs": "lib/libs",
        "@/infra": "lib/infra",
        "@/infra/repositories": "lib/infra/database/repositories"
    }
}
